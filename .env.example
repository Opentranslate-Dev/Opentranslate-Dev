# Project Information
PROJECT_NAME=OpenTranslate
VERSION=0.1.0

# Blockchain Configuration
BLOCKCHAIN_PROVIDER=http://localhost:8545
CONTRACT_ADDRESS=0x...
TOKEN_ADDRESS=0x...
PRIVATE_KEY=your_private_key_here
SEPOLIA_URL=https://sepolia.infura.io/v3/your_project_id
MAINNET_URL=https://mainnet.infura.io/v3/your_project_id
ETHERSCAN_API_KEY=your_etherscan_api_key

# AI Model Configuration
TRANSLATION_MODEL=opentranslate/translator-v1
VALIDATION_MODEL=opentranslate/validator-v1
CLASSIFIER_MODEL=opentranslate/classifier-v1
MODEL_PATH=/path/to/models
DEVICE=cuda

# Validation Configuration
VALIDATION_THRESHOLD=0.8
BATCH_SIZE=32

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql://user:pass@localhost:5432/opentranslate
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Cache Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Web Interface Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Security Configuration
SECRET_KEY=your-secret-key
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Monitoring Configuration
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_PORT=9090

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760  # 10MB 